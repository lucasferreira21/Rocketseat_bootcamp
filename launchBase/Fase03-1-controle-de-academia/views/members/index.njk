{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <a href="/members/create">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{ member.avatar_url }})">

              </span>{{member.name}}
            </td>
            
            <td>
              {{ member.email }}
            </td>

            <td>
              {{ member.weight }}Kg
            </td>

            <td>
              {{ member.height }}cm
            </td>                        

            <td>
              <a href="/members/{{ member.id }}">Ver</a>
              <a href="/members/{{ member.id }}/edit">Alterar</a>
            </td>

          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}